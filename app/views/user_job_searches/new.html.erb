<h2> Job recherch√© </h2>

<%= simple_form_for(@user_job_search) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :localisation %>
    <%= f.input :contrat_type %>
    <%= f.input :experience_level %>
    <%= f.input :salary %>
    <%= f.input :study_level %>
    <%= f.input :sector %>
  </div>

  <div class="form-actions">
    <%= f.submit "Valider mon profil",  class: "btn btn-outline-info booking-btn"%>
  </div>
<% end %>
