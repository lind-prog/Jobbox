<div class="container-offer">
  <div class="offer-page">
    <div class="offer-header">
      <div class="offer-header-content">
        <h1><%= @offer.title %></h1>
        <p class="offer-subtitle"><%= @offer.title %> | <%= @offer.contrat_type %></p>
      </div>
    </div>

    <div class="offer-content">
      <div class="offer-details">
        <div class="offer-info">
          <div class="offer-info-block city-block">
            <i class="fas fa-map-marker-alt"></i>
            <p><strong>Ville :</strong> <%= @offer.address %></p>
          </div>

          <div class="offer-info-block contract-block">
            <i class="fas fa-briefcase"></i>
            <p><strong>Type de contrat :</strong> <%= @offer.contrat_type %></p>
          </div>

          <div class="offer-info-block experience-block">
            <i class="fas fa-user-tie"></i>
            <p><strong>Niveau d'expérience :</strong> <%= @offer.experience_level %></p>
          </div>

          <div class="offer-info-block education-block">
            <i class="fas fa-graduation-cap"></i>
            <p><strong>Niveau d'études :</strong> <%= @offer.study_level %></p>
          </div>

          <div class="offer-info-block sector-block">
            <i class="fas fa-industry"></i>
            <p><strong>Secteur :</strong> <%= @offer.sector %></p>
          </div>

          <div class="offer-info-block salary-block">
            <i class="fas fa-money-bill-wave"></i>
            <p class="salary"><strong>Salaire :</strong> <%= @offer.salary %></p>
          </div>
        </div>

        <div class="offer-description">
          <h2>Description</h2>
            <p><%= @offer.description %>
        </div>

        <div class="offer-testimonials">
          <h2>Témoignages</h2>
          <div class="testimonial">
            <p>"Une entreprise incroyable pour laquelle travailler. L'équipe est super et l'environnement est stimulant!"</p>
            <cite>- Jean Dupont</cite>
          </div>
          <div class="testimonial">
            <p>"Une offre qui offre vraiment de bonnes opportunités de croissance personnelle et professionnelle."</p>
            <cite>- Marie Curie</cite>
          </div>
        </div>
         <% if current_user.recruiter? %>
          <%= link_to 'Voir les candidatures', my_candidacies_candidacies_path , class: 'btn btn-primary' %>
         <% else %>
          <%= button_to 'Postuler', offer_candidacies_path(@offer) , class: 'btn btn-primary' %>
        <%end%>
      </div>

      <div class="map-container">
        <div id="map" class="map map_offre"
          data-controller="map"
          data-map-marker-value="<%= @marker.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
          data-map-longitude-value="<%= @offer.longitude %>"
          data-map-latitude-value="<%= @offer.latitude %>">

        </div>
      </div>
    </div>
  </div>
</div>
