<div class="list-group">
  <% chatrooms.each do |chatroom| %>
    <% if current_user.recruiter?%>
      <%= link_to chatroom.candidacy.job_seeker.name, chatroom, class: "list-group-item list-group-item-action", data: { turbo_frame: "chatroom"} %>
    <% else %>
      <%= link_to chatroom.candidacy.offer.recruiter.name, chatroom, class: "list-group-item list-group-item-action", data: { turbo_frame: "chatroom"} %>
    <% end %>
  <% end %>
</div>
