<div class="chatroom-container">
  <div class="chat-header">
    <h1>Ma messagerie</h1>
  </div>

  <div class="messages">
    <% if @messages.present? %>
      <% @messages.each do |message| %>
        <div class="message <%= message.user == current_user ? 'from-user' : 'from-other' %>">
          <%= message.content %>
        </div>
      <% end %>
    <% else %>
      <p>Aucun message Ã  afficher.</p>
    <% end %>
  </div>

  <%= simple_form_for [@chatroom, @message], html: { class: "message-form" } do |f| %>
    <div class="input-wrapper">
      <% if @other_user.present? %>
        <%= f.input :content,
          label: false,
          placeholder: "Message #{@other_user.name}",
          wrapper_html: { class: "form-group" } %>
      <% else %>
        <%= f.input :content,
          label: false,
          placeholder: "Message",
          wrapper_html: { class: "form-group" } %>
      <% end %>
    </div>
    <div class="submit-button">
      <%= f.submit "Send", class: "btn" %>
    </div>
  <% end %>
</div>
