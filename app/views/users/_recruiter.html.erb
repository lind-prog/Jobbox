<div class="dashboard-container">
  <header class="dashboard-header">
    <div class="profile-card">
      <div class="profile-image">
      <%= link_to root_path do %>
        <%= image_tag 'https://www.olin.edu/sites/default/files/styles/card/public/2022-04/DassaultSystemes.png?itok=00lvjIZo', alt: "Avatar Profil", class: 'avatar' %>
      <% end %>
    </div>
    <div class="profile-info">
      <h1><%= user.name %></h1>
      <p><%= user.email %></p>
    </div>
  </header>

  <div class="dashboard-content-recruiter">
    <section class="box profile-form">
      <h2>Mes offres</h2>
      <%= link_to 'Créer/Editer une offre', new_offer_path(:user_id => user.id), class: 'btn' %>
      <%= link_to 'Voir mon offre', offer_path(@offer), class: 'btn' %>
    </section>
    <section class="box candidatures">
      <h2>Mes candidats</h2>
      <%= link_to 'Voir les candidatures', my_candidacies_candidacies_path, class: 'btn' %>
    </section>
    <section class="box messages">
      <h2>Ma messagerie</h2>
      <%= link_to 'Accéder aux messages', chatrooms_path, class: 'btn' %>
    </section>
    <section class="box swipe">
      <h2>Recruter</h2>
      <%= link_to 'Trouver mon candidat idéal', users_path, class: 'btn' %>
    </section>
  </div>
</div>
