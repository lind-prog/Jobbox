<div data-controller="tinder" class="tinder">
  <div data-tinder-target="cards" class="tinder--cards">
    <% @job_seekers.each do |user| %>
      <div data-id="<%= user.id %>" class="tinder--card" data-tinder-target="card">
        <h3><%= user.name %></h3>
        <p>Email: <%= user.email %></p>

      <%# <div class="card-infos-container"> %>
        <!-- Détails positionnés à droite -->
        <%# <div class="card-info diplome-card"> %>
          <!--<p><%= user.diplome %></p>-->
        <%# </div> %>

        <!-- Détails positionnés à gauche -->
        <%# <div class="card-info experience-card"> %>
          <!--<p><%= user.experience %></p>-->
        <%# </div> %>
      <%# </div> %>
        <button data-action="click->tinder#displayDiplome" class="btn-diplome">Diplôme</button>
        <button data-action="click->tinder#displayExperience" class="btn-experience">Expérience</button>
      </div>
      <div class="diplome d-none" id="<%= user.id %>_diplome">
        <p><%= user.diplome %></p>
      </div>
      <div class="experience d-none" id="<%= user.id %>_experience">
        <p><%= user.experience %></p>
      </div>
    <% end %>
  </div>

  <div class="tinder--buttons">
    <button data-action="click->tinder#swipeLeft" id="nope"><i class="fa fa-remove"></i></button>
    <button data-action="click->tinder#swipeRight" id="love"><i class="fa fa-briefcase"></i></button>
  </div>
</div>

<div class="tinder--status">
  <i class="fa fa-briefcase"></i> <!-- Valisette pour swipe droite -->
  <i class="fa fa-remove"></i> <!-- Croix pour swipe gauche -->
</div>
